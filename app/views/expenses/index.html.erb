<div class="card">
<div class="card-header d-flex align-items-center justify-content-center">
  <div class="d-flex align-items-center">
    <i class="<%= @category.icon %> fa-3x mx-3"></i>
    <h1 class="mb-0"><%= @category.name %></h1>
  </div>
</div>

  <div class="card-body">
    <p class="card-text">Total amount: <%= number_to_currency(@total_amount) %></p>
    <ul class="list-group">
      <% @expenses.each do |transaction| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= transaction.name %>
          <span><%= number_to_currency(transaction.amount) %></span>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="card-footer text-center">
    <%= link_to 'Add a new transaction', new_category_expense_path, class: "btn btn-primary" %>
    <%= link_to '< Back', root_path, class: "btn btn-secondary ml-2" %>
  </div>
</div>
