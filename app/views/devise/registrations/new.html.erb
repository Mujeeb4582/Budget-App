<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="login-header">
    <%= link_to users_path, class: "text-decoration-none text-light display-5 m-2" do %>
    <%= fa_icon "solid arrow-left" %>
    <% end %>
    <h2 class="m-0">REGISTER</h2>
    <%= f.submit "Next", class:'login-top-btn mx-2' %>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.file_field :avatar %>
  </div>
  <br/>
  <br/>

  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: 'Full Name', class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.email_field :email, autocomplete: "email", placeholder: 'Email', class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: 'form-control' %>
  </div>

<% end %>
