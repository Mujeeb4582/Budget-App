<div class="container my-5">
<h1 class="text-center mb-4">Add category</h1>
<%= form_for @category do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'py-2 fs-5' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :icon, class: 'py-2 fs-5'%>
    <%= f.collection_select(:icon, Category::ICONS, :to_s, :to_s, {prompt: "Select an Icon"}, {class: 'form-control fa py-2'}) %>
  </div>

  <%= f.submit "Save", class: "btn btn-primary mt-4" %>
<% end %>
</div>
