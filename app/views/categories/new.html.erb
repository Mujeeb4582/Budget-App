<div class="bg-primary p-2 d-flex align-items-center">
  <%= link_to root_path, class: "text-decoration-none text-light display-5" do %>
  <%= fa_icon "solid arrow-left" %>
  <% end %>
  <h1 class="mx-auto text-center mb-0 text-light">Add category</h1>
</div>
<div class="container">
<%= form_for @category do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'py-2 fs-5' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :icon, class: 'py-2 fs-5'%>
    <%= f.collection_select(:icon, Category::ICONS, :to_s, :to_s, {prompt: "Select an Icon"}, {class: 'form-control fa py-2'}) %>
  </div>
  <div class="text-center container mb-2 fixed-bottom">
  <%= f.submit "Save", class: "btn btn-lg btn-custom container-fluid py-3" %>
  </div>
<% end %>
</div>
